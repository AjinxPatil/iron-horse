# Here also go all build targets specific to this very newgrf

NML_FILE := generated/iron-horse.nml

GENERATE_NML := iron-horse-nml
GENERATE_LNG := iron-horse-nml
GENERATE_DOC := iron-horse-nml

GENERATE=src/build_iron_horse.py

 # default num. pool workers for python compile,
 # default is 0 to disable multiprocessing (also avoids multiprocessing pickle failures masking genuine python errors)
pw = 0
roster = *

iron-horse-nml:
	$(_E) [GENERATE]
	$(_V) python3 src/build_iron_horse.py '${REPO_TITLE}' '${REPO_REVISION}' '${pw}' '${roster}'

clean::
	$(_V)-rm -r docs
	$(_V)-rm -r chameleon_cache
	$(_V)-rm -r generated
	$(_V)-rm src/*.pyc
	$(_V)-rm src/*/*.pyc

