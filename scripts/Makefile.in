# Here also go all build targets specific to this very newgrf

GENERATE_NML := iron-horse-nml
GENERATE_LNG := iron-horse-nml
GENERATE_DOC := iron-horse-nml

GENERATE=src/build_iron_horse.py

iron-horse-nml:
	$(_E) [GENERATE]
	$(_V) python src/build_iron_horse.py '${REPO_TITLE}' '${REPO_REVISION}' '${COMPILE_FASTER}' '${NO_MP}'

clean::
	$(_V)-rm -r docs
	$(_V)-rm -r chameleon_cache
	$(_V)-rm -r generated
	$(_V)-rm src/*.pyc
	$(_V)-rm src/*/*.pyc
