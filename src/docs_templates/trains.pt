<tal:main_template define="main_template load: main_template.pt" metal:use-macro="main_template">
<div metal:fill-slot='body'>

    <div class="row">
        <div class="span12">
            <h2>${len([roster for roster in registered_rosters if not roster.disabled])} rosters of trains for OpenTTD</h2>
            <p>Only one roster is active in any game.  Choose the one you want with the parameter option (newgrf settings) :)</p>
            <hr />
            <tal:roster repeat="roster registered_rosters">
                <tal:active_rosters_only condition="roster.disabled is False">
                    <h3 id="${roster.id}">${base_lang_strings['STR_PARAM_ROSTER_OPTION_' + str(roster.numeric_id - 1)]}</h3>
                    <p>
                        ${len(roster.engine_consists)} engines inspired by
                        <span tal:condition="roster.id == 'antelope'">Central and Western Africa</span>
                        <span tal:condition="roster.id == 'llama'">Argentina, Chile and Peru</span>
                        <span tal:condition="roster.id == 'pony'">Britain and Ireland</span>
                    </p>
                    <table class="table table-striped tablesorter">
                        <thead>
                            <tr>
                                <td><!--! empty cell --></td>
                                <th>Vehicle Name</th>
                                <th>Intro Date</th>
                                <th>Power (hp)</th>
                                <th>Speed (mph)</th>
                                <th>Track type</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tal:engine_consists repeat="consist roster.engine_consists">
                                <tr>
                                    <td style="vertical-align:middle;">
                                        <img src="static/img/${consist.id}.png"
                                             width="${2 * global_constants.buy_menu_sprite_width}"
                                             height="${2 * global_constants.buy_menu_sprite_height}" />
                                    </td>
                                    <td>${consist.get_name_substr()} ${base_lang_strings[consist.get_str_name_suffix()]}</td>
                                    <td>${consist.intro_date}</td>
                                    <td>${consist.power}</td>
                                    <td>${consist.speed}</td>
                                    <td>${consist.track_type}</td>
                                </tr>
                            </tal:engine_consists>
                        </tbody>
                    </table>
                    ${sum([len(roster.wagon_consists[wagon_class]) for wagon_class in roster.wagon_consists])} wagons
                    <table class="table table-striped tablesorter">
                        <thead>
                            <tr>
                                <td><!--! empty cell --></td>
                                <th>Vehicle Name</th>
                                <th>Intro Date</th>
                                <th>Capacity (t)</th>
                                <th>Speed (mph)</th>
                                <th>Track type</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tal:wagon_classes repeat="wagon_class roster.wagon_consists">
                                <tal:wagon_consists repeat="consist roster.wagon_consists[wagon_class]">
                                    <tr>
                                        <td style="vertical-align:middle;">
                                            <img src="static/img/${consist.id}.png"
                                                 width="${2 * global_constants.buy_menu_sprite_width}"
                                                 height="${2 * global_constants.buy_menu_sprite_height}" />
                                        </td>
                                        <td>${consist.get_name_substr()} ${base_lang_strings[consist.get_str_name_suffix()]}</td>
                                        <td>${consist.intro_date}</td>
                                        <td>${sum([unit.default_cargo_capacity for unit in consist.units])}</td>
                                        <td>${consist.speed}</td>
                                        <td>${consist.track_type}</td>
                                    </tr>
                                </tal:wagon_consists>
                            </tal:wagon_classes>
                        </tbody>
                    </table>
                </tal:active_rosters_only>
            </tal:roster>
        </div>
    </div>

</div>
</tal:main_template>
