<tal:main_template define="main_template load: main_template.pt" metal:use-macro="main_template">
<div metal:fill-slot='body'>

    <div class="row">
        <div class="span12">
            <h2>${len(doc_helper.get_engine_consists())} trains for OpenTTD</h2>
            <hr />
            <tal:roster repeat="roster registered_rosters">
                <h3>${base_lang_strings['STR_PARAM_ROSTER_OPTION_' + str(roster.numeric_id - 1)]}</h3>
                <table class="table table-striped tablesorter">
                    <thead>
                        <tr>
                            <th>Vehicle Name</th>
                            <th>Intro Date</th>
                            <th>Power (hp)</th>
                            <th>Track type</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tal:engines repeat="consist roster.engine_consists">
                            <tr>
                                <td>${consist.get_name_substr()} ${base_lang_strings[consist.get_str_name_suffix()]}</td>
                                <td>${consist.intro_date}</td>
                                <td>${consist.power}</td>
                                <td>${consist.track_type}</td>
                            </tr>
                        </tal:engines>
                    </tbody>
                </table>
            </tal:roster>
        </div>
    </div>

</div>
</tal:main_template>
